<Window x:Class="AfterCopy.HistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AfterCopy"
        xmlns:models="clr-namespace:AfterCopy.Models"
        xmlns:helpers="clr-namespace:AfterCopy.Helpers"
        xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
        Title="History" Icon="image/icon.png" Height="700" Width="900"
        WindowStyle="None"
        ResizeMode="CanResize"
        ShowInTaskbar="False"
        Background="{StaticResource PrimaryBackgroundBrush}"
        WindowStartupLocation="CenterScreen"
        BorderBrush="#333333"
        BorderThickness="1">

    <WindowChrome.WindowChrome>
        <WindowChrome ResizeBorderThickness="5" CaptionHeight="0" GlassFrameThickness="0" CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <helpers:DateGroupConverter x:Key="DateGroupConverter"/>
        <helpers:ImagePathConverter x:Key="ImagePathConverter"/>
        
        <!-- Group Header Style -->
        <Style x:Key="GroupHeaderStyle" TargetType="{x:Type GroupItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type GroupItem}">
                        <StackPanel>
                            <!-- Clickable Header Area -->
                            <Border Background="#222" Padding="10,5" Margin="0,10,0,5" CornerRadius="4" Cursor="Hand"
                                    Tag="{Binding Name}"
                                    MouseLeftButtonDown="GroupHeader_Click">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding Name}" 
                                               Foreground="{StaticResource AccentBrush}" 
                                               FontWeight="Bold"
                                               FontSize="14"/>
                                    <TextBlock Grid.Column="1" Text="OPEN LOG >" Foreground="#555" FontSize="10" VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                            <ItemsPresenter />
                        </StackPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Trash Icon Geometry -->
        <Geometry x:Key="TrashIconGeometry">M3,6H21V8H3V6M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V10H6V19M8,12H10V17H8V12M14,12H16V17H14V12M12,2A2,2 0 0,1 14,4H19V6H5V4H10A2,2 0 0,1 12,2Z</Geometry>

        <!-- Delete Button Style (Hidden by default, visible on Hover) -->
        <Style x:Key="DeleteButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Visibility" Value="Hidden"/> <!-- Hidden by default -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="2">
                            <Path x:Name="Path" Data="{StaticResource TrashIconGeometry}" 
                                  Fill="#666666" 
                                  Width="14" Height="14" 
                                  Stretch="Uniform"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Path" Property="Fill" Value="{StaticResource AccentBrush}"/> <!-- Fixed: Use Brush, not Color -->
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/> <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- Search & Actions -->
            <RowDefinition Height="*"/>    <!-- List -->
            <RowDefinition Height="10"/>   <!-- Bottom Padding -->
        </Grid.RowDefinitions>

        <!-- 1. Header -->
        <Grid Grid.Row="0" Background="#111" MouseLeftButtonDown="Header_MouseLeftButtonDown">
            <TextBlock Text="CLIPBOARD HISTORY" 
                       Foreground="{StaticResource AccentBrush}" 
                       FontWeight="Bold" 
                       FontSize="18" 
                       VerticalAlignment="Center"
                       Margin="20,0,0,0"/>

            <Button HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0"
                    Width="30" Height="30" Background="Transparent" BorderThickness="0"
                    Click="CloseButton_Click" Cursor="Hand">
                <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z" 
                      Fill="White" Stretch="Uniform" Margin="8"/>
            </Button>
        </Grid>

        <!-- 2. Search & Export & Clear -->
        <Grid Grid.Row="1" Margin="20,15,20,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/> <!-- Refresh -->
                <ColumnDefinition Width="Auto"/> <!-- Export -->
                <ColumnDefinition Width="Auto"/> <!-- Clear -->
            </Grid.ColumnDefinitions>
            
            <!-- Search -->
            <Border Grid.Column="0" Background="#333" CornerRadius="4" Margin="0,0,10,0" Padding="5">
                <Grid>
                    <TextBlock Text="Search history..." Foreground="#888" VerticalAlignment="Center" Margin="2,0,0,0" IsHitTestVisible="False" FontStyle="Italic">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <TextBox x:Name="SearchBox"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="White"
                             CaretBrush="White"
                             FontSize="14"
                             VerticalAlignment="Center"
                             TextChanged="SearchBox_TextChanged"/>
                </Grid>
            </Border>

            <!-- Refresh Button -->
            <Button Grid.Column="1" 
                    Style="{StaticResource SecondaryButtonStyle}"
                    Height="35" Width="35"
                    Padding="0"
                    Margin="0,0,10,0"
                    Click="RefreshButton_Click"
                    ToolTip="Refresh">
                <Path Data="M17.65,6.35C16.2,4.9 14.21,4 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20C15.73,20 18.84,17.45 19.73,14H17.65C16.83,16.33 14.61,18 12,18A6,6 0 0,1 6,12A6,6 0 0,1 12,6C13.66,6 15.14,6.69 16.22,7.78L13,11H20V4L17.65,6.35Z" 
                      Fill="White" Stretch="Uniform" Width="14" Height="14"/>
            </Button>

            <!-- Export Button -->
            <Button Grid.Column="2" 
                    Content="EXPORT" 
                    Style="{StaticResource SecondaryButtonStyle}"
                    Height="35"
                    Padding="15,0"
                    Margin="0,0,10,0"
                    Click="ExportButton_Click"/>

            <!-- Clear Button -->
            <Button Grid.Column="3" 
                    Content="CLEAR" 
                    Style="{StaticResource SecondaryButtonStyle}"
                    Height="35"
                    Padding="15,0"
                    Click="ClearAll_Click"/>
        </Grid>

        <!-- 3. List with Grouping -->
        <ListView x:Name="HistoryList" Grid.Row="2" 
                  Margin="20,0"
                  Background="Transparent" 
                  BorderThickness="0"
                  Foreground="White"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            
            <ListView.GroupStyle>
                <GroupStyle ContainerStyle="{StaticResource GroupHeaderStyle}"/>
            </ListView.GroupStyle>
            
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <EventSetter Event="PreviewMouseLeftButtonUp" Handler="ListViewItem_PreviewMouseLeftButtonUp"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <Border x:Name="Bd" BorderBrush="#333333" BorderThickness="0,0,0,1" Padding="10" Background="Transparent" SnapsToDevicePixels="true">
                                    <Grid>
                                        <ContentPresenter/>
                                    </Grid>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="#262626"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="#333"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Cursor" Value="Hand"/>
                </Style>
            </ListView.ItemContainerStyle>
            
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/> <!-- Delete Button Column -->
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="{Binding Timestamp, StringFormat=HH:mm}" 
                                   Foreground="#808080" 
                                   FontSize="12" 
                                   Margin="0,0,15,0"
                                   VerticalAlignment="Center">
                             <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                         <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListViewItem}}" Value="True">
                                             <Setter Property="Foreground" Value="#FFB0B0"/> 
                                         </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                             </TextBlock.Style>
                        </TextBlock>

                        <!-- Content Area -->
                        <Grid Grid.Column="1" VerticalAlignment="Center">
                            <!-- Text Mode -->
                            <TextBlock x:Name="TxtContent"
                                       Text="{Binding Content}"
                                       TextWrapping="Wrap"
                                       TextTrimming="CharacterEllipsis"
                                       MaxHeight="60"
                                       FontSize="14"/>

                            <!-- Image Mode: Show thumbnail with text label -->
                            <StackPanel x:Name="ImgContainer" Orientation="Horizontal" Visibility="Collapsed">
                                <Border CornerRadius="4" BorderBrush="#444" BorderThickness="1" Margin="0,0,10,0">
                                    <Image Source="{Binding Content, Converter={StaticResource ImagePathConverter}}"
                                           Stretch="Uniform"
                                           MaxHeight="60" MaxWidth="100"/>
                                </Border>
                                <TextBlock Text="[COPY IMAGE]"
                                           Foreground="#888"
                                           FontStyle="Italic"
                                           VerticalAlignment="Center"
                                           FontSize="14"/>
                            </StackPanel>
                        </Grid>

                        <!-- Delete Button: Visible only when ListViewItem is MouseOver -->
                        <Button Grid.Column="2"
                                Style="{StaticResource DeleteButtonStyle}"
                                Click="DeleteItem_Click"
                                Tag="{Binding Id}">
                             <Button.Visibility>
                                <Binding Path="IsMouseOver" RelativeSource="{RelativeSource AncestorType=ListViewItem}" Converter="{StaticResource BooleanToVisibilityConverter}"/>
                             </Button.Visibility>
                        </Button>
                    </Grid>
                    <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding Type}" Value="Image">
                            <Setter TargetName="TxtContent" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="ImgContainer" Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
