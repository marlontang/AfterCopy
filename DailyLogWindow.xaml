<Window x:Class="AfterCopy.DailyLogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AfterCopy"
        xmlns:helpers="clr-namespace:AfterCopy.Helpers"
        xmlns:models="clr-namespace:AfterCopy.Models"
        mc:Ignorable="d"
        Title="Daily Log" Height="800" Width="1000"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        Background="{StaticResource PrimaryBackgroundBrush}"
        WindowStartupLocation="CenterScreen"
        BorderBrush="#333" BorderThickness="1">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <helpers:ImagePathConverter x:Key="ImagePathConverter"/>

        <!-- Style for the Timeline Item (Left Side) -->
        <Style x:Key="TimelineItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd" BorderThickness="0,0,0,1" BorderBrush="#222" Padding="15,12" Background="{TemplateBinding Background}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <!-- Time -->
                                <TextBlock Text="{Binding HourLabel}" Foreground="{StaticResource AccentBrush}" FontWeight="Bold" FontSize="16" Margin="0,0,10,0"/>
                                <!-- Summary (Now binds to FirstItem.DisplaySummary via ViewModel) -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Summary}" Foreground="#888" FontSize="12" TextTrimming="CharacterEllipsis" MaxHeight="32" TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding CountLabel}" Foreground="#444" FontSize="10" Margin="0,2,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#1A1A1A"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#252525"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="Bd" Property="BorderThickness" Value="0,0,4,0"/> <!-- Right red bar -->
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for the Chapter Header (Right Side) -->
        <Style x:Key="ChapterHeaderStyle" TargetType="{x:Type GroupItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type GroupItem}">
                        <StackPanel Margin="0,0,0,20">
                            <!-- Chapter Title: ## 14:00 -->
                            <Border Background="Transparent" BorderBrush="#333" BorderThickness="0,0,0,1" Margin="0,20,0,10" Padding="0,0,0,5">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="#" Foreground="#444" FontSize="20" FontWeight="Bold" Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding Name}" Foreground="White" FontSize="20" FontWeight="Bold"/>
                                </StackPanel>
                            </Border>
                            <ItemsPresenter />
                        </StackPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Placeholder style for Title TextBox -->
        <Style x:Key="TitleTextBoxStyle" TargetType="TextBox">
             <Setter Property="Background" Value="Transparent"/>
             <Setter Property="BorderThickness" Value="0"/>
             <Setter Property="Foreground" Value="White"/>
             <Setter Property="FontSize" Value="14"/>
             <Setter Property="FontWeight" Value="Bold"/>
             <Setter Property="CaretBrush" Value="White"/>
             <Style.Triggers>
                 <Trigger Property="IsFocused" Value="True">
                     <Setter Property="Background" Value="#111"/>
                 </Trigger>
             </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/> <!-- Sidebar Navigation -->
            <ColumnDefinition Width="*"/>   <!-- Main Content -->
        </Grid.ColumnDefinitions>

        <!-- LEFT: Timeline Navigation -->
        <Border Grid.Column="0" Background="#111" BorderBrush="#333" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock x:Name="DateHeader" Text="2026-01-18" Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                <ListBox x:Name="TimelineList" Grid.Row="1" 
                         Background="Transparent" BorderThickness="0"
                         ItemContainerStyle="{StaticResource TimelineItemStyle}"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         SelectionChanged="TimelineList_SelectionChanged"/>
            </Grid>
        </Border>

        <!-- RIGHT: Content Stream -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Toolbar -->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Close Button Area -->
            <Button HorizontalAlignment="Right" Content="CLOSE" Click="Close_Click" Style="{StaticResource SecondaryButtonStyle}" Margin="10" Width="80"/>

            <ListView x:Name="ContentList" Grid.Row="1" 
                      Background="Transparent" BorderThickness="0" 
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                
                <ListView.GroupStyle>
                    <GroupStyle ContainerStyle="{StaticResource ChapterHeaderStyle}"/>
                </ListView.GroupStyle>

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/> <!-- Stretch to fill width -->
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListViewItem">
                                    <Border Background="#181818" CornerRadius="4" Margin="0,0,20,15" Padding="15">
                                        <StackPanel>
                                            <Grid Margin="0,0,0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <!-- Timestamp -->
                                                <TextBlock Grid.Column="0" Text="{Binding Timestamp, StringFormat=HH:mm}" 
                                                           Foreground="{StaticResource AccentBrush}" FontWeight="Bold" FontSize="12" 
                                                           VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                
                                                <!-- Custom Title Input -->
                                                <TextBox Grid.Column="1" Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                                                         Style="{StaticResource TitleTextBoxStyle}"
                                                         Tag="Add a title..."
                                                         LostFocus="Item_LostFocus"/>
                                                
                                                <!-- Copy Button -->
                                                <Button Grid.Column="2" Content="COPY" Click="CopyItem_Click" Tag="{Binding}"
                                                        Background="Transparent" Foreground="#666" BorderThickness="0" FontSize="10" Cursor="Hand"/>
                                            </Grid>
                                            
                                            <!-- Content: Text or Image based on Type -->
                                            <Grid>
                                                <!-- Text Content -->
                                                <TextBox x:Name="TextContent"
                                                         Text="{Binding Content, UpdateSourceTrigger=PropertyChanged}"
                                                         Foreground="#CCC" Background="Transparent" BorderThickness="0"
                                                         FontFamily="Consolas" FontSize="14" TextWrapping="Wrap"
                                                         AcceptsReturn="True"
                                                         MaxHeight="300" VerticalScrollBarVisibility="Auto"
                                                         LostFocus="Item_LostFocus"
                                                         SelectionBrush="#E50914"/>

                                                <!-- Image Content -->
                                                <StackPanel x:Name="ImageContent" Visibility="Collapsed">
                                                    <TextBlock Text="[COPY IMAGE]" Foreground="#888" FontStyle="Italic" FontSize="12" Margin="0,0,0,8"/>
                                                    <Border CornerRadius="4" BorderBrush="#444" BorderThickness="1" HorizontalAlignment="Left">
                                                        <Image Source="{Binding Content, Converter={StaticResource ImagePathConverter}}"
                                                               Stretch="Uniform" MaxHeight="200" MaxWidth="400"/>
                                                    </Border>
                                                </StackPanel>
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <DataTrigger Binding="{Binding Type}" Value="Image">
                                            <Setter TargetName="TextContent" Property="Visibility" Value="Collapsed"/>
                                            <Setter TargetName="ImageContent" Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>
        </Grid>
    </Grid>
</Window>