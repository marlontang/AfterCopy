<Window x:Class="AfterCopy.DetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:AfterCopy.Helpers"
        Title="Details" Icon="image/icon.png" Height="500" Width="600"
        WindowStyle="None"
        ResizeMode="CanResize"
        Background="{StaticResource PrimaryBackgroundBrush}"
        WindowStartupLocation="CenterScreen"
        BorderBrush="#333333"
        BorderThickness="1">

    <WindowChrome.WindowChrome>
        <WindowChrome ResizeBorderThickness="5" CaptionHeight="0" GlassFrameThickness="0" CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <helpers:ImagePathConverter x:Key="ImagePathConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/> <!-- Header -->
            <RowDefinition Height="*"/>    <!-- Content -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Background="#222" MouseLeftButtonDown="Header_MouseLeftButtonDown">
            <TextBlock Text="FULL CONTENT" Foreground="White" VerticalAlignment="Center" Margin="15,0" FontWeight="Bold"/>

            <!-- Close Button -->
            <Button HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0"
                    Width="30" Height="30" Background="Transparent" BorderThickness="0"
                    Click="CloseButton_Click" Cursor="Hand">
                <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z"
                      Fill="White" Stretch="Uniform" Margin="8"/>
            </Button>
        </Grid>

        <!-- Text Content -->
        <TextBox Grid.Row="1" x:Name="ContentBox"
                 Margin="10"
                 Background="Transparent"
                 Foreground="White"
                 BorderThickness="0"
                 FontSize="14"
                 FontFamily="Consolas"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 IsReadOnly="True"
                 VerticalScrollBarVisibility="Auto"/>

        <!-- Image Content -->
        <ScrollViewer Grid.Row="1" x:Name="ImageScrollViewer"
                      Visibility="Collapsed"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto"
                      Margin="10">
            <Image x:Name="ContentImage" Stretch="Uniform"/>
        </ScrollViewer>
    </Grid>
</Window>